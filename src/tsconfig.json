{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "ES2015"
    ],
    "jsx": "react-jsx",
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": [
    "./resources/ts/**/*"
  ]
}
